@namespace Asp_project.ViewModels.Advantages

@model AdvantageCreateVM

<div class="container mt-5">
    <h1>@ViewBag.filename</h1>
    <form class="form-sample" method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">
            <input asp-for="Icon" class="form-control" />
            <span class="text-danger" asp-validation-for="Icon"></span>

            <input asp-for="Title" type="text" class="form-control" maxlength="50" />
            <span class="text-danger" asp-validation-for="Title"></span>

            <input asp-for="Desc" type="text" class="form-control" maxlength="50" />
            <span class="text-danger" asp-validation-for="Desc"></span>
        </div>
        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <a asp-action="Index" class="btn btn-primary text-white">Back</a>
    </form>
</div>