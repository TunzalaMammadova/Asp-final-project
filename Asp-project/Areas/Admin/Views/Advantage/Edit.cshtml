@namespace Asp_project.ViewModels.Advantages

@model AdvantageEditVM

<div class="container mt-5">
    <div class="image">
        <input asp-for="Icon" type="text" class="form-control" maxlength="50" />
        <span class="text-danger" asp-validation-for="Icon"></span>
    </div>
    <form class="form-sample" method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="form-group">

            <input asp-for="Title" type="text" class="form-control" maxlength="50" />
            <span class="text-danger" asp-validation-for="Title"></span>

            <input asp-for="Desc" type="text" class="form-control" maxlength="50" />
            <span class="text-danger" asp-validation-for="Desc"></span>
        </div>
        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <a asp-action="Index" class="btn btn-primary text-white">Back</a>
    </form>
</div>